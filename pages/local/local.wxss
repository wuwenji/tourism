/* pages/orders/orders.wxss */
.tab-h{
  height: 80rpx;
  display: flex;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 999999;
  background: #fff;
  border-bottom: 1px solid #e5e5e5;
}
.tab_bg{
  height: 100rpx;
  width: 100%;
}
.item_block,.form{
  margin: 15rpx;
}
.tab-item{
  flex: 1;
  text-align: center;
  display: inline-block;
  font-size: 16px;
}
.tab-item.active{
  color: #d3601a;
  border-bottom: 2px solid #d3601a;
}
.tab-content{
  margin: 20px 15px;
}
.order_detail {
  padding-bottom: 20px;
  margin-bottom: 20px;
}
.order_left{
  position: relative;
}
.img_absolute{
  position: absolute;
  z-index: 9999;
  top: 0;
  left: 0;
  color: #fff;
}
.order_left image{
  width: 100%;
  height: 250rpx;
}
.order_name{
  font-weight: bold;
  font-size: 16px;
  margin-bottom: 6px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.order_prp{
  margin-top: 6px;
}
.img_absolute_top{
  font-size: 12px;
  background-color: #333300;
  display: block;
  padding: 4px 10px;
  border-radius: 20px;
  border:1px solid #5a5a3d;
  margin-top: 10px;
  margin-left: 10px;
}
.price{
  position: absolute;
  bottom: 15px;
  left: 10px;
}
.price text{
  display: block;
  width: 200rpx;
  font-size: 14px;
  color: #fff;
  text-align: center;
  padding: 4px 0;
}
.price_one{
  background: #fe0000;
}
.price_two{
  background: #333301;
}
.evaluate{
  position: absolute;
  font-weight: bold;
  right: 10px;
  bottom: 15px;
  color: #fff;
  font-size: 14px;
  text-shadow: 1px 1px 1px #aaa;
}
.evaluate text{
  margin-left: 15px;
}
.form_title{
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}
.form_input .zhi{
  position: relative;
  top: -9px;
  color: #999;
  border: none;
  margin-right: 0;
}
.form_input input {
  display: inline-block;
  width: 150rpx;
  border: 1px solid #e9e9e9;
  font-size: 14px;
  text-align: center;
}
.form_input text{
  border: 1px solid #e9e9e9;
  padding: 4px 10px;
  font-size: 14px;
  margin-right: 10px;
  color: #666;
  display: inline-block;
  margin-bottom: 10px;
}
.form_top{
  margin-top: 20px;
}
.form_btns{
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #ddd;
  background-color: #eee;
  margin-top: 20px;
}
.btns_bg{
  height: 100rpx;
}
.form_btns text{
  flex: 1;
  text-align: center;
  padding: 10px 0;
}
.form_btns button{
  flex: 1;
  text-align: center;
  border-radius: 0;
}
.submit{
  background-color:#fe0000;
  color: #fff;
}
.form_input .text_active{
  border: 1px solid #6db5fe;
  color: #6db5fe;
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.screenLoad{
  position: absolute;
  width: 250rpx;
  height: 80px;
  border-radius: 6px;
  background:rgba(0, 0, 0, 0.5);
  left: 250rpx;
  color: #fff;
}