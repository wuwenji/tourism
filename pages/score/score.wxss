/* pages/score/score.wxss */
.xing{
  width: 30rpx;
  height: 30rpx;
  margin: 5px 2px;
}
.xings{
  text-align: center;
}
.title{
  text-align: center;
  font-size: 14px;
  margin-bottom: 10px;
}
.tarea{
  font-size: 14px;
  margin: 10px;
  border: 1px solid #ddd;
  padding: 5px;
}
.btns{
  margin: 0 10px;
}
.labels{
  margin: 15rpx;
}
.labels text{
  display: inline-block;
  font-size: 12px;
  color: #666;
  border: 1px solid #ccc;
  padding: 5px;
  margin-right: 10px;
  margin-bottom: 10px;
}
.labels text.active{
  border: 1px solid #2be2d3;
  color: #2be2d3;
}
.alert{
  width: 100%;
  font-size: 14px;
  font-weight: bold;
  color: red;
  text-align: center;
  line-height: 30px;
  position: fixed;
  top: 0;
  background: #fff;
  border-bottom: 1px solid #666;
}