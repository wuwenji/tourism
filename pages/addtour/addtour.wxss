/* pages/addtour/addtour.wxss */
radio{
  transform:scale(0.7);
}
checkbox{
  transform:scale(0.8);
}
.body{
  padding: 10px;
  font-size: 14px;
}
.item{
  border-bottom: 1px solid #ddd;
  margin-top: 20px;
  padding-bottom: 10px;
}
.item radio-group,.item input{
  display: inline-block;
}
.item text{
  width: 160rpx;
  display:  inline-block;
}
.item input{
  position: relative;
  top: 8px;
}
.btns{
  display: flex;
  margin-top: 30px;
}
.btns text:nth-child(1) {
  border-right: 1px solid #ccc;
}
.btns text,.btns button{
  color: green;
  flex: 1;
  text-align: center;
  line-height:14px;
}
.btns button{
  padding:0;
  font-size:14px;
  background:#fff;
  line-height:14px;
}
button::after{ border: none; }
.tourist_item text{
  display: inline-block;
  line-height: 30px;
}
.tourist_item{
  border-bottom: 1px solid #ddd;
  padding-top: 15px;
  padding-bottom:5px;
}
.tourist_item checkbox{
  width: 80rpx;
}
.tourist_item text:nth-child(2){
  width: 150rpx;
}
.tourist_item text:nth-child(3){
  width: 100rpx;
}
.tourist_item text:nth-child(4){
  width: 320rpx;
}
.btns2 text{
  display: inline-block;
  line-height: 50px !important;
  font-size: 15px !important;
  
}
.btns2{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
  border-top: 1px solid #ccc;
  background: #fff;
  
  left: 0;
}
.yes{
  background:green;
  color: #fff !important;
}
.btns_bg{
  height: 50px;
}
.add_contact{
  width: 100px;
  line-height: 30px;
  background: #3c8620;
  margin: 20px auto;
  display: block;
  text-align: center;
  color: #fff;
  border-radius: 4px;
}
.form{
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  width: 100%;
  left: 0;
  height: 100%;
}
.form form{
  background: #fff;
  width: calc(100% - 20px);
  height: 50%;
  display: block;
  position: fixed;
  bottom: 0;
  padding: 0 10px;
}
.alert{
  background: #fff;
  box-shadow: 0px 0px 10px #000;
  border-bottom: 1px solid #666;
  position: fixed;
  top: 0;
  width: 100%;
  line-height: 30px;
  text-align: center;
  color: red;
  font-size: 14px;
  font-weight: bold;
}