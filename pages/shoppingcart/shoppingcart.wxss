/* pages/shoppingcart/shoppingcart.wxss */
.guess_prod_left image{
  width: 130rpx;
  height: 130rpx;
  margin-right: 15px;
  border-radius: 5px;
}
.guess_prod{
  margin: 15px;
  border-top: 1px solid #e4e4e4;
  padding-top: 20px;
  margin-bottom: 20px;
}
.guess_like{
  text-align: center;
  color: #999999;
  font-size: 16px;
  margin: 20px 15px 0px 15px;
}
.guess_prod_left,.guess_prod_right{
  float:left;
}
.guess_prod_left{
  width: 130rpx;
}
.guess_prod_right{
  width: 380rpx;
  margin-left: 20rpx;
  position: relative;
  height: 130rpx;
}
.guess_title{
  color: #383838;
  font-weight: bold;
  font-size: 16px;
}
.guess_detail{
  font-size: 14px;
  color: #999;
  line-height: 34px;
}
.guess_price{
  margin-top: 10px;
  width: 430rpx;
}
.guess_price_left{
  color: #e59c10;
  font-weight: bold;
  font-size: 14px;
}
.guess_price_right{
  float: right;
  font-size: 14px;
  color: #999999;
}
.clb::after {
  content: '';
  clear: both;
  display: block;
  width: 0;
  height: 0;
  visibility: hidden;
}
.delete{
  font-size: 11px;
  float: right;
  background: #aaa;
  padding: 2px 5px;
  border-radius: 4px;
  color: #fff;
  width: 50rpx;
  margin-top: 30rpx;
}
.check{
  float: left;
  width: 90rpx;
  margin-top: 30rpx;
}
.footer{
  position: fixed;
  display: flex;
  bottom: 0;
  background-color: #fff;
  width: 100%;
  border-top: 1px solid #ddd;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 16px;
}
.footer view{
  flex: 1;
}
.footer_left{
  color: #ff6d00;
  padding-left: 15rpx;
}
.footer_right{
   text-align: center;
  background: #ff6d00;
  color: #fff;
}